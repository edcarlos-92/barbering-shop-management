# Barber Shop Management System - Environment Variables
# Copy this file to .env.local and update the values

# Application Configuration
APP_NAME=Barber Shop Management System
NODE_ENV=development
SERVER_PORT=3000

# Database Configuration
# Choose either MongoDB or MySQL (not both)

# MongoDB Configuration
MONGODB_URI=mongodb://localhost:27017/barber-shop

# MySQL Configuration (Alternative to MongoDB)
MYSQL_HOST=localhost
MYSQL_PORT=3306
MYSQL_DATABASE=barber_shop
MYSQL_USERNAME=your_mysql_username
MYSQL_PASSWORD=your_mysql_password

# Authentication Database (if using separate auth DB)
MYSQL_AUTH_HOST=localhost
MYSQL_AUTH_DATABASE=barber_shop_auth
MYSQL_AUTH_USERNAME=your_auth_username

# File Upload Configuration
# Cloudinary for image/file uploads
CLOUDINARY_CLOUD_NAME=your_cloudinary_cloud_name
CLOUDINARY_API_KEY=your_cloudinary_api_key
CLOUDINARY_API_SECRET=your_cloudinary_api_secret

# Alternative: Local file upload (if not using Cloudinary)
FILE_UPLOAD_HOST=localhost
FILE_UPLOAD_PORT=3001
FILE_UPLOAD_USER=your_upload_user
FILE_UPLOAD_PASS=your_upload_password

# Payment Gateway (Optional - for future payment integration)
FLW_PUBLIC_KEY=your_flutterwave_public_key

# Google Services (Optional - for maps/analytics)
GOOGLE_API_KEY=your_google_api_key

# JWT Secret (Required for authentication)
JWT_SECRET=your_jwt_secret_key_here

# Email Configuration (Optional - for notifications)
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USER=your_email@gmail.com
EMAIL_PASS=your_email_password

# SMS Configuration (Optional - for notifications)
SMS_API_KEY=your_sms_api_key
SMS_SENDER_ID=your_sender_id